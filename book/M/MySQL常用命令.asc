grant all privileges on *.*  to root@"172.17.%.%" identified by "mMwklKZyyIEv6iq63404";:: 添加用户

update user set Grant_priv='Y' where User='root' and Host='172.17.%.%';
flush privileges;:: 赋予用户grant权限


ALTER TABLE ps CONVERT TO CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;:: 修改表字符集

ALTER DATABASE ttd CHARACTER SET = utf8mb4 COLLATE = utf8mb4_unicode_ci;:: 修改数据库字符集


CREATE DATABASE `test2` DEFAULT CHARACTER SET utf8mb4  DEFAULT COLLATE utf8mb4_unicode_ci;:: 使用 `utf8mb4` 建数据库

CREATE DATABASE `test2` DEFAULT CHARACTER SET utf8mb4 COLLATE utf8mb4_general_ci;:: 使用 `utf8mb4` 建数据库

CREATE DATABASE xxl_job DEFAULT CHARACTER SET utf8mb4  DEFAULT COLLATE utf8mb4_unicode_ci;:: 使用 `utf8mb4` 建数据库

grant all privileges on xxl_job.*  to xxl_job@"localhost" identified by "v3jZHcERaifHpdk6MUQh";
